rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    match /{document=**} {
      allow read, write: if false;
    }

    match /{document=**} {
      allow read: if request.auth.uid != null;
      allow create: if request.auth.uid != null && request.auth.uid == request.ressource.data.uid;
    }
  }
}